<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUserCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvDeletedUserCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:text="@string/form_first_name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_gray"
            android:fontFamily="@font/poppins"
            android:hint="@string/hint_first_name"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColorHint="@color/gray_text" />

        <TextView
            android:id="@+id/tvErrorFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:textColor="@color/error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:text="@string/form_last_name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_gray"
            android:fontFamily="@font/poppins"
            android:hint="@string/hint_last_name"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColorHint="@color/gray_text" />

        <TextView
            android:id="@+id/tvErrorLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:textColor="@color/error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:text="@string/form_age"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_gray"
            android:fontFamily="@font/poppins"
            android:hint="@string/hint_age"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:textColorHint="@color/gray_text" />

        <TextView
            android:id="@+id/tvErrorAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:textColor="@color/error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:text="@string/form_email"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_gray"
            android:fontFamily="@font/poppins"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="20dp"
            android:textColorHint="@color/gray_text" />

        <TextView
            android:id="@+id/tvErrorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:textColor="@color/error" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text=""
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_pink_purple"
            android:fontFamily="@font/poppins"
            android:text="@string/btn_add_user"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_pink_purple"
            android:fontFamily="@font/poppins"
            android:text="@string/btn_edit_user"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_pink_purple"
            android:fontFamily="@font/poppins"
            android:text="@string/btn_delete_user"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>