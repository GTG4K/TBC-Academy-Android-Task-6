<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:text="First Name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_gray"
            android:fontFamily="@font/poppins"
            android:hint="Giorgi"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColorHint="@color/gray_text" />

        <TextView
            android:id="@+id/tvErrorFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:textColor="@color/error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:text="Last Name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_gray"
            android:fontFamily="@font/poppins"
            android:hint="Tarkhnishvili"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColorHint="@color/gray_text" />

        <TextView
            android:id="@+id/tvErrorLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:textColor="@color/error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:text="Age"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_gray"
            android:fontFamily="@font/poppins"
            android:hint="20"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:textColorHint="@color/gray_text" />

        <TextView
            android:id="@+id/tvErrorAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:textColor="@color/error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/et_gray"
            android:fontFamily="@font/poppins"
            android:hint="tarkhna@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="20dp"
            android:textColorHint="@color/gray_text" />

        <TextView
            android:id="@+id/tvErrorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="10dp"
            android:textColor="@color/error" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text=""
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_pink_purple"
            android:fontFamily="@font/poppins"
            android:text="Add User"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_pink_purple"
            android:fontFamily="@font/poppins"
            android:text="Edit User"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_pink_purple"
            android:fontFamily="@font/poppins"
            android:text="Delete User"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>